<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundnistephanie_ayawhilabti"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CWSPP_LayoutTitle_TextviewDETAILS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/header_background_forownerhomepage"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/days_one"
                android:gravity="center"
                android:padding="0dp"
                android:text="Layout Title"
                android:textColor="@color/white"
                android:textSize="20sp"
                 />

            <ImageView
                android:id="@+id/CWSPP_LayoutImage_ImageviewDETAILS"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/uploadphoto" />

            <TextView
                android:drawableStart="@drawable/ic_baseline_meeting_room_24"
                android:drawableTint="@color/primary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/days_one"
                android:text="Layout current Availability:"
                android:textAllCaps="true"

                android:textColor="@color/primary2" />

            <TextView
                android:id="@+id/CWSPP_Availability_TextviewDETAILS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/days_one"
                android:hint="Available"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_border_bottom"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="2"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Person capacity: "
                        android:textColor="@color/primary2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_PersonCapacity_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/days_one"
                        android:hint="10"
                        android:textColor="@color/primary"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Area size: "
                        android:textColor="@color/primary2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_Areasize_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/days_one"
                        android:gravity="center"
                        android:hint="100"
                        android:textColor="@color/primary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnSpan="2"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icons8_card_payment_48"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Pricing: "
                            android:textColor="@color/primary2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Hourly rate: "
                        android:textColor="@color/primary2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_HourlyRate_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/days_one"
                        android:hint="00.00"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Daily rate: "
                        android:textColor="@color/primary2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_DailyRate_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/days_one"
                        android:hint="00.00"
                        android:textColor="@color/primary"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Weekly rate: "
                        android:textColor="@color/primary2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_WeeklyRate_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/days_one"
                        android:hint="00.00"
                        android:textColor="@color/primary"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Monthly rate: "
                        android:textColor="@color/primary2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSPP_MonthyRate_TextviewDETAILS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/days_one"
                        android:hint="00.00"
                        android:textColor="@color/primary"
                        android:textSize="15sp" />


                </GridLayout>



            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/CWSPP_BookNow_AppComButtonDETAILS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_icon_background_forownerhomepage"
                android:backgroundTint="@color/primary"
                android:drawableStart="@drawable/ic_rename"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Book now!"
                android:textColor="@color/white" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/CWSPP_SeeOther_AppComButtonDETAILS"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/backgroundnistephanie_ayawhilabti"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="5dp"
                android:text="See other layouts"
                android:textColor="@color/black" />



        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>