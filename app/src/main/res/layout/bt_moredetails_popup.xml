        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:id="@+id/declineButton_BTDCardview"
                android:layout_height="40dp"
                android:text="Decline"
                android:layout_margin="4dp"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="#F44336"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:id="@+id/acceptButton_BTDCardview"
                android:text="Accept"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="@color/colorSuccess"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:id="@+id/completeButton_BTDCardview"
                android:text="Complete"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="@color/colorWarning"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:id="@+id/cancelButton_BTDCardview"
                android:text="Cancel"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="@color/gray"
                android:layout_marginBottom="10dp"/>

        </GridLayout>


    </LinearLayout>


</LinearLayout>