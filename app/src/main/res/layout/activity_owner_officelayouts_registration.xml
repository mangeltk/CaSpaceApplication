<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange14"
    android:orientation="vertical"
    tools:context=".Owner_OfficelayoutsRegistration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/owner_logoupperleft" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/buttonwhite_borderblack"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/header_background_forownerhomepage"
                android:padding="15dp"
                android:text="Edit office layout details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/layoutImage_imageButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/orange10"
                android:scaleType="fitCenter"
                android:src="@drawable/uploadphoto" />

            <EditText
                android:id="@+id/layoutName_editText"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_orange"
                android:drawableLeft="@drawable/ic_rename"
                android:drawablePadding="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:hint="Layout Name"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/layoutPeopleSize_editText"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_orange"
                android:drawableLeft="@drawable/ic_people_outline"
                android:drawablePadding="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:hint="No. of people"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/white"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/layoutAreaSize_editText"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_orange"
                android:drawableLeft="@drawable/branch_icon_white"
                android:drawablePadding="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:hint="Area size"
                android:padding="8dp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/white"
                android:textSize="17dp" />


            <Button
                android:id="@+id/saveLayout_Button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/orange1"
                android:fontFamily="@font/quicksand_medium"
                android:text="SAVE LAYOUT"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="20dp" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/trending_background_forownerhomepage"
        android:backgroundTint="@color/white"
        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/owner_menu_item" />

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/trending_background_forownerhomepage" />

</LinearLayout>