<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.BookingTransactionManagement.BookingsFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Booking Transactions"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand_medium"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:background="@drawable/header_background_forownerhomepage"
        android:backgroundTint="@color/orange11"
        android:layout_margin="10dp"
        android:padding="10dp"
        />

        <!--todo: search bar-->
        <!--todo: filter for pending, completed, ongoing-->
        <!--todo: filter for dates optional-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/customerBookings_Recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>




        </LinearLayout>

</LinearLayout>