<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary2"
    android:orientation="vertical"
    tools:context=".customer.BookingTransactionManagement.BookingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/header_background_forownerhomepage"
        android:backgroundTint="@color/primary"
        android:textAllCaps="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="My Booking Transactions"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <SearchView
        android:id="@+id/searchViewCustBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custbooking_searchbar"
        android:backgroundTint="@color/gray"
        android:focusable="false"
        android:layout_marginBottom="10dp"
        app:closeIcon="@drawable/ic_baseline_clear"
        app:queryHint="Search by branch or layout name"
        app:searchIcon="@drawable/ic_baseline_search_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/menu"
        android:backgroundTint="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Ongoing Bookings"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:visibility="gone"
            android:id="@+id/emptyBookings_Textview"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/icons8_emptybookings_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO ONGOING BOOKINGS"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/backgroundnistephanie_ayawhilabti"
            android:textColor="@color/primary"
            android:backgroundTint="@color/gray"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ongoingCutomerBookings_Recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recent_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundnistephanie_ayawhilabti"
            android:drawableEnd="@drawable/ic_baseline_arrow_upward_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Oldest"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/oldest_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundnistephanie_ayawhilabti"
            android:drawableEnd="@drawable/ic_baseline_arrow_downward_24"
            android:drawableTint="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="Recent"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/backgroundnistephanie_ayawhilabti"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_bookmark_added_24"
                android:drawableTint="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Status"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/custBookingsStatus_Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custbooking_searchbar"
                android:backgroundTint="@color/primary2"
                android:gravity="center"
                android:popupBackground="@color/primary2"
                android:text="Status" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customerBookings_Recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>