<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/coworkingspaces_search_bar">

    <!--Header-->
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/customerProfile_RecyclerBackground_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="My Favorites List"
            android:fontFamily="@font/quicksand_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/dialog_color2"
            />

        <ImageView
            android:id="@+id/customerProfile_RecyclerBackground_Image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:src="@drawable/icons_red_heart48"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerProfile_RecyclerBackground_Recyclerview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"/>


</LinearLayout>