<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewBT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="MissingConstraints"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coworkingspaces_search_bar"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/coworkingspaces_search_bar"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/bookingID_BTCardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Booking ID"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/status_BTTextViewCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/blue13"
                android:textSize="14sp"
                android:visibility="visible"
                android:gravity="center"
                tools:text="Pending"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:columnCount="2"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Customer Name: "
                android:visibility="visible"
                android:id="@+id/BT_label1"/>

            <TextView
                android:id="@+id/customerName_BTCardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Customer Name Sample" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                android:textStyle="bold"
                tools:text="Layout Name: "
                android:id="@+id/BT_label2"/>

            <TextView
                android:id="@+id/layoutName_BTCardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Layout Name sample" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:text="Duration: "
                android:id="@+id/BT_label3"/>

            <TextView
                android:id="@+id/duration_BTCardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Duration sample" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible"
                android:textStyle="bold"
                tools:text="Total Payment:"
                android:id="@+id/BT_label4"/>

            <TextView
                android:id="@+id/total_BTCardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Total sample" />




        </GridLayout>

