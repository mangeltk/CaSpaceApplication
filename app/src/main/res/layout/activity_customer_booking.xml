<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcaspace"
    android:orientation="vertical"
    tools:context=".customer.BookingManagement.CustomerBookingActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CBDbranchSmallPic_Imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:src="@drawable/upload" />

        <TextView
            android:id="@+id/CBDBranchName_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:hint="CWS Branch name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Booking Details CardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CBDcardViewBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customer_coworkingspace_textview"
                        android:orientation="horizontal">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2">

                            <TextView
                                android:id="@+id/CBDLayoutName_TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnSpan="2"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/header_background_forownerhomepage"
                                android:backgroundTint="@color/primary"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:paddingBottom="0dp"
                                android:text="Name"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/CBDLayoutImage_ImageView"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:background="@drawable/customer_searchbar"
                                android:scaleType="fitCenter"
                                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge" />

                            <TextView
                                android:id="@+id/CBDLayoutAvailability_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:hint="Availability status"
                                android:textColor="@color/primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_columnSpan="2"
                                    android:layout_gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <GridLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:columnCount="2"
                                        android:orientation="horizontal"
                                        android:padding="2dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="No of people:"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/CBDLayoutPersonCap_TextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="5dp"
                                            android:fontFamily="@font/days_one"
                                            android:hint="10"
                                            android:paddingBottom="3dp"
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/gray"
                                            android:textSize="15sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Area size:"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/CBDLayoutAreasize_TextView"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:fontFamily="@font/days_one"
                                            android:hint="10 sq.m."
                                            android:textColor="@color/black"
                                            android:textColorHint="@color/gray"
                                            android:textSize="15sp" />

                                    </GridLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="fill_vertical"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <GridLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="15dp"
                                        android:layout_marginEnd="15dp"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/customer_recycler_cwshomepage"
                                        android:columnCount="5"
                                        android:orientation="horizontal"
                                        android:padding="5dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="30dp"
                                            android:layout_columnSpan="5"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="10dp"
                                            android:drawableStart="@drawable/icons8_pesosign_48"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:padding="2dp"
                                            android:text="Pricing Rates (in Peso)"
                                            android:textColor="@color/black"
                                            android:textSize="18sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:drawableLeft="@drawable/ic_baseline_payments_24"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/black"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:hint="Hourly rate"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/black"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/CBDLayoutHourlyRate_Textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|end"
                                            android:layout_marginStart="10dp"
                                            android:layout_weight="1"
                                            android:drawablePadding="0dp"
                                            android:fontFamily="@font/days_one"
                                            android:gravity="center"
                                            android:hint="00.00"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/gray"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="space"
                                            android:textColorHint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_weight="1"
                                            android:drawableLeft="@drawable/ic_baseline_payments_24"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/black"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:hint="Weekly rate"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/black"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:id="@+id/CBDLayoutWeeklyRate_Textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|end"
                                            android:layout_marginStart="10dp"
                                            android:layout_weight="1"
                                            android:drawablePadding="0dp"
                                            android:fontFamily="@font/days_one"
                                            android:gravity="center"
                                            android:hint="00.00"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/gray"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_weight="1"
                                            android:drawableLeft="@drawable/ic_baseline_payments_24"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/black"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:hint="Daily rate"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/black"
                                            android:textSize="14sp" />


                                        <TextView
                                            android:id="@+id/CBDLayoutDailyRate_Textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|end"
                                            android:layout_marginStart="10dp"
                                            android:layout_weight="1"
                                            android:drawablePadding="0dp"
                                            android:fontFamily="@font/days_one"
                                            android:gravity="center"
                                            android:hint="00.00"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/gray"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="space"
                                            android:textColorHint="@color/white" />/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:drawableLeft="@drawable/ic_baseline_payments_24"
                                            android:drawablePadding="5dp"
                                            android:drawableTint="@color/black"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:hint="Monthly rate"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/black"
                                            android:textSize="14sp" />


                                        <TextView
                                            android:id="@+id/CBDLayoutMonthlyRate_Textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center|end"
                                            android:layout_marginStart="10dp"
                                            android:layout_weight="1"
                                            android:drawablePadding="0dp"
                                            android:fontFamily="@font/days_one"
                                            android:gravity="center"
                                            android:hint="00.00"
                                            android:textColor="@color/black"
                                            android:textColorHighlight="@color/orange"
                                            android:textColorHint="@color/gray"
                                            android:textSize="14sp" />

                                    </GridLayout>

                                </LinearLayout>


                            </GridLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnSpan="2"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="*click to minimize layout details"
                                android:textColor="@color/orange12"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </GridLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/CBDcardViewBookingBelow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone"
                app:cardCornerRadius="5dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/customer_coworkingspace_textview"
                    android:orientation="horizontal">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/CBDLayoutNameBelow_TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/header_background_forownerhomepage"
                            android:backgroundTint="@color/primary"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:paddingBottom="0dp"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="2"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="*click to see layout details"
                            android:textColor="@color/orange12"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/browseBookingSchedules_AppCompatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="@color/dialog_color2"
                android:drawableLeft="@drawable/ic_baseline_edit_calendar_24"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="See Accepted Booking Schedules"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/browseCalendar_AppCompatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonwhite_borderblack"
                android:backgroundTint="@color/dialog_color2"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:text="Browse Calendar for Dates"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <!-- Calendar booked dates-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fragmentContainerBookings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPagerBookings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </FrameLayout>



            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>