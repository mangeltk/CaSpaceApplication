<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner.AmenitiesOffered.Owner_AmenitiesOffered"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/headerLayout"
        android:backgroundTint="@color/orange14"
        android:background="@drawable/buttonwhite_borderblack"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/owner_logoupperleft" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonwhite_borderblack"
            android:padding="20dp"
            android:textSize="16sp"
            android:text="Amenities offered"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:drawableStart="@drawable/icons_ameneties_bell"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectedSection"
        android:layout_below="@id/headerLayout"
        android:orientation="vertical"
        android:layout_above="@id/bottomNavigationView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/updateAmenities_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/quicksand_medium"
            android:text="Update Amenities"
            android:textColor="@color/blue13"
            android:textStyle="bold|italic"
            android:drawableStart="@drawable/ic_rename"
            android:drawableTint="@color/blue13"
            android:layout_marginEnd="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/AmenitiesOffered_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:itemIconSize="40dp"
        app:itemIconTint="@color/black"
        app:labelVisibilityMode="unlabeled"
        android:layout_alignParentBottom="true"
        app:menu="@menu/owner_menu_item"
        android:background="@drawable/trending_background_forownerhomepage"/>

    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/trending_background_forownerhomepage"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"/>

</RelativeLayout>