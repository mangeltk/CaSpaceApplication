<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="18dp"
    app:cardCornerRadius="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trending_background_forownerhomepage"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/customer_recycler_cwshomepage"
            android:layout_width="match_parent"
            android:backgroundTint="@color/gray"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_circle_black"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/upload" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <TextView
                   android:layout_marginStart="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="Coworking Space Branch"
                   android:fontFamily="@font/quicksand_medium"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="15sp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:drawableStart="@drawable/icons_map_pin_24"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address sample"
                        android:gravity="center"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_columnSpan="2"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Likes:"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"/>


                </GridLayout>




            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>