<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".customer.BookingTransactionManagement.Cust_BookingTransaction">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CustBookingDetails_backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_edittext_orange"
            android:foreground="@drawable/back"
            android:foregroundGravity="center"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:paddingEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:text="Booking details"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Booking Details CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/CustBTBranchName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CWS Branch name"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/customer_recycler_cwshomepage"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/coworkingspaces_search_bar"
                android:orientation="horizontal">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/CustBTLayoutImage_ImageView"
                            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraLarge"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:src="@drawable/layout_sample" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:columnCount="2"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/CustBTBranchLocation_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:drawableStart="@drawable/icons_map_pin_24"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:drawablePadding="3dp"
                                android:hint="Branch Location"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTBranchContactInfo_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:drawablePadding="3dp"
                                android:hint="Contact info"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTBranchHours_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:drawableStart="@drawable/ic_baseline_meeting_room_24"
                                android:drawableTint="@color/green"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:drawablePadding="3dp"
                                android:hint="Open hours"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:drawablePadding="3dp"
                                android:hint="Open hours"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />


                        </GridLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="fill_horizontal">

                        <GridLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/CustBTLayoutName_TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_columnSpan="2"
                                android:layout_marginTop="1dp"
                                android:background="@drawable/customer_coworkingspace_textview"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:backgroundTint="@color/orange11"
                                android:paddingBottom="5dp"
                                android:text="Name"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/CustBTLayoutAvailability_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/quicksand_medium"
                                android:hint="Availability status"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:layout_columnSpan="2"
                                android:textColor="@color/teal_700"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:text="No of people:"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/CustBTLayoutPersonCap_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:hint="10"
                                android:paddingBottom="3dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_medium"
                                android:text="Area size:"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/CustBTLayoutAreasize_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:hint="10 sq.m."
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="15sp" />

                        </GridLayout>



                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:columnCount="2"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnSpan="2"
                                android:layout_gravity="center"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:text="Pricing Rates"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="20dp"
                                android:drawableLeft="@drawable/ic_baseline_payments_24"
                                android:drawablePadding="0dp"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="Hourly rate"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTLayoutHourlyRate_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="5dp"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="00.00"
                                android:textColor="@color/black"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_baseline_payments_24"
                                android:drawablePadding="0dp"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="Daily rate"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTLayoutDailyRate_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="00.00"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_baseline_payments_24"
                                android:drawablePadding="0dp"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="Weekly rate"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTLayoutWeeklyRate_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="00.00"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="20dp"
                                android:drawableLeft="@drawable/ic_baseline_payments_24"
                                android:drawablePadding="0dp"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="Monthly rate"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTLayoutMonthlyRate_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="5dp"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="00.00"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginStart="20dp"
                                android:drawableLeft="@drawable/ic_baseline_payments_24"
                                android:drawablePadding="0dp"
                                android:drawableTint="@color/black"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="Annual rate"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/CustBTLayoutAnnualRate_Textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:layout_marginStart="5dp"
                                android:drawablePadding="0dp"
                                android:fontFamily="@font/quicksand_medium"
                                android:gravity="center"
                                android:hint="00.00"
                                android:textColor="@color/black"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/gray"
                                android:textSize="12sp" />

                        </GridLayout>

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <!-- Booking Details Choose on radio buttons what rate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/orange11"
        android:background="@drawable/customer_coworkingspace_textview">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select rate to book"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/hourlyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hourly"/>

            <RadioButton
                android:id="@+id/daiyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"/>

            <RadioButton
                android:id="@+id/weeklyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"/>

            <RadioButton
                android:id="@+id/monthlyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly"/>

            <RadioButton
                android:id="@+id/annuallyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annually"/>


        </RadioGroup>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:background="@drawable/coworkingspaces_search_bar"
        android:layout_margin="10dp"
        android:padding="10dp">

        <Button
            android:id="@+id/date_picker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select start Date"
            android:backgroundTint="@color/orange11"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="start date"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/startDate"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/date_picker_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date end"
            android:backgroundTint="@color/orange11"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="date end"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/endDate"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Total Days:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="total days result"
            android:id="@+id/days"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Selected rate type:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="rate type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Selected rate value:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="rate value"
            android:id="@+id/seletedRateValue"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="TOTAL payment"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/total"
            android:layout_columnSpan="2"
            android:textColor="@color/black"/>


    </GridLayout>

    <!-- Booking Details CardView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </LinearLayout>

    </ScrollView>










</LinearLayout>