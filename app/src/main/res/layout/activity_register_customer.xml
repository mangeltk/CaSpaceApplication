<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:overScrollMode="never"
    android:padding="40dp"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".customer.RegisterCustomer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Create New Account"
            android:textColor="@color/black"
            android:fontFamily="@font/days_one"
            android:textSize="23sp" />

        <FrameLayout
            android:id="@+id/layoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@drawable/messaging_background_image"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/textAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTint="@color/gray"
                android:drawableLeft="@drawable/uploadpic"
                android:textColor="@color/secondary_text"
                android:textSize="13dp"/>

        </FrameLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_baseline_verified_24"
            android:drawablePadding="5dp"
            android:padding="8dp"
            android:paddingStart="95dp"
            android:text="Customer"
            android:fontFamily="@font/days_one"
            android:layout_marginTop="7dp"
            android:textColor="@color/primary2"
            android:textSize="18dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/customerFirstName"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/messaging_background_input"
                android:fontFamily="@font/montserrat_light"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:textColor="@color/black"
                android:textColorHint="@color/secondary_text"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/customerLastName"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginStart="181dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/messaging_background_input"
                android:hint="Last Name"
                android:fontFamily="@font/montserrat_light"
                android:textColorHint="@color/secondary_text"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:textColor="@color/black"
                android:textSize="13sp"/>

        </FrameLayout>

        <EditText
            android:id="@+id/customer_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/messaging_background_input"
            android:hint="Email"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/secondary_text"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:textColor="@color/primary_text"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/customer_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/messaging_background_input"
            android:hint="Username"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/secondary_text"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:textColor="@color/primary_text"
            android:textSize="13sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/customer_organization"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/messaging_background_input"
                android:hint="Organization"
                android:fontFamily="@font/montserrat_light"
                android:textColorHint="@color/secondary_text"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:textColor="@color/primary_text"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/customer_population"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/messaging_background_input"
                android:layout_marginStart="181dp"
                android:hint="Population"
                android:fontFamily="@font/montserrat_light"
                android:textColorHint="@color/secondary_text"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:textColor="@color/primary_text"
                android:textSize="13sp"/>

        </FrameLayout>

        <EditText
            android:id="@+id/customer_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/messaging_background_input"
            android:hint="Password"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/secondary_text"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:textColor="@color/primary_text"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/messaging_background_input"
            android:hint="Confirm Password"
            android:fontFamily="@font/montserrat_light"
            android:textColorHint="@color/secondary_text"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:textColor="@color/primary_text"
            android:textSize="13sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:animateLayoutChanges="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButtonCustomer"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Sign Up"
                android:backgroundTint="@color/orange1"
                android:fontFamily="@font/montserrat_light"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="11dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:visibility="invisible"/>

        </FrameLayout>

        <TextView
            android:id="@+id/textSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Log In"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/primary2"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/logocaspace">
            </androidx.appcompat.widget.AppCompatImageView>
        </FrameLayout>

    </LinearLayout>
</ScrollView>